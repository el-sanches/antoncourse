@font-face
  font-family 'ObjectSans'
  src url('~static/fonts/ObjectSans-Heavy.woff2') format('woff2'),
  url('~static/fonts/ObjectSans-Heavy.woff') format('woff')
  font-weight 800
  font-style normal

@font-face
  font-family 'ObjectSans'
  src url('~static/fonts/ObjectSans-Regular.woff2') format('woff2'),
  url('~static/fonts/ObjectSans-Regular.woff') format('woff')
  font-weight 400
  font-style normal

*
  box-sizing border-box
  margin 0
  padding 0

body
  font-family 'ObjectSans'
  font-size 24px
  font-weight 400
  color $charkGrey
  background $bg

a
  text-decoration none
  color $charkGrey
button
  background transparent
  outline none
  border none

p
  font-size 24px
  line-height 40px
  letter-spacing 0.03em
  @media $xs
    font-size 16px
    line-height 24px
.h0
  font-size 112px
  line-height 134px
  font-weight 800
  letter-spacing 0.03em
  color transparent
  text-transform uppercase
  -webkit-text-stroke-width 2px
  -webkit-text-stroke-color $acsent
  @media $sm_minus
    font-size 80px
    line-height 80px
    letter-spacing 0.08em
  @media $xs
    -webkit-text-stroke-width 1px
    font-size 40px
    line-height 48px
    letter-spacing 0.03em
h1
  font-size 80px
  line-height 112px
  font-weight 800
  letter-spacing 0.05em
  text-transform uppercase
  @media $xs
    font-size 40px
    line-height 48px
    letter-spacing 0.04em
  &._acsent
    color $acsent

h2
  font-size 48px
  line-height 72px
  letter-spacing 0.02em
  font-weight 400

h3
  font-size 24px
  line-height 36px
  font-weight 800
  letter-spacing 0.02em

img
  max-width 100%
  max-height 100%

.wrapper
  overflow hidden

.container
  max-width 1440px
  padding 0 64px
  margin 0 auto
  @media $md_minus
    padding 0 44px
  @media $sm_minus
    padding 0 64px
  @media $xs
    padding 0 24px

//-- grid system
.gridContainer
  display grid
  gap 32px
  grid-template-columns repeat(12,minmax(0,1fr))
  width 100%
  @media $md_minus
    gap 24px
  @media $sm_minus
    grid-template-columns repeat(6,minmax(0,1fr))
    gap 32px
  @media $xs
    gap 40px
    grid-template-columns repeat(3,minmax(0,1fr))
  &._centered
    align-items center
    align-self center
  &__cell
    //outline 1px solid #d4d4d4
